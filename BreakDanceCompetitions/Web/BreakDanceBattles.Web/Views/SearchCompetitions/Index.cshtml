@using BreakDanceBattles.Web.ViewModels.SearchCompetitions;
@model BreakDanceBattles.Web.ViewModels.SearchCompetitions.SearchIndexViewModel
@{
    ViewData["Title"] = "Search competitions by category";

    var categoryItems = this.Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}
<div class="p-5 rounded" style="background-color: #Def2f1">
    <h1 class="p-2">@ViewData["Title"]</h1>


    <form asp-action="List" method="get">
        <div class="checkbox_container">
            @foreach (var category in Model.Categories)
            {
                <input id="category_@category.Id" type="checkbox" name="Categories" value="@category.Id" />
                <label for="category_@category.Id">@category.Name</label>
                <br>
            }
        </div>
        <button class="btn btn-primary">Search</button>

    </form>
</div>
