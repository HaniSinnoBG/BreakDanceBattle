@using System.Security.Claims;
@model BreakDanceBattles.Web.ViewModels.Messages.MessageListViewModel
@{

 }
<div class="row">



    <table class="table rounded table-hover table-striped " style="background-color:#061114; color: white">

        <thead>
            <tr>
                <th scope="col">Subject</th>
                <th scope="col">Message</th>
                <th scope="col">Sender</th>
            </tr>
        </thead>

        @foreach (var message in Model.Messages)
        {
            <div class="hover-title">
                <tbody>
                    <tr class="table">
                        <th><a asp-action="ById" asp-route-id="@message.Id" class="text-light"><div class="hover-title">@message.Subject</div></a></th>
                        <td class="text-light">@message.MessageContent.Substring(0, 100) ...</td>
                        <td class="text-light">@message.AddedByUser.Email</td>
                        <td class="text-light">
                            <form method="post" asp-action="Delete" id="deleteForm" asp-route-id="@message.Id"></form>

                            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </div>

        }
    </table>
</div>
</div>


<hr />

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>Do you want to delete this message?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>