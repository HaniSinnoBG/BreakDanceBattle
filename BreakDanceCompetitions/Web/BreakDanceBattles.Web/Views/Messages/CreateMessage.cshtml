@model BreakDanceBattles.Web.ViewModels.Messages.CreateMessageInputModel
@{
    this.ViewData["Title"] = "Contact Us";
}
<div class="p-5 rounded" style="background-color: #Def2f1">
    <h1 class="d-flex justify-content-center">@this.ViewData["Title"]</h1>
    <form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Subject"></label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MessageContent">Message</label>
            <textarea asp-for="MessageContent" class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
            <span asp-validation-for="MessageContent" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-primary" />
    </form>
</div>

