@model BreakDanceBattles.Web.ViewModels.Competitions.SingleCompetitionViewModel
<!DOCTYPE html>

@{ 
    this.ViewData["Title"] = Model.Name;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    @{var categories = ""; }
    @foreach (var category in Model.Categories)
    {
        categories += category.CategoryName + " ";
    }


    <div class="container">
        <div class="row align-items-center my-5">
            <div class="col-lg-7">
                <img class="img-fluid rounded mb-4 mb-lg-0" src="@Model.ImageUrl" alt="">
            </div>

            <div class="col-lg-5">
                <h1 class="font-weight-light">@Model.Name</h1>
                <h2>@categories</h2>
                <p>@Model.Description</p>
                <a asp-controller="Competitions" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary" style="background-color: red">Edit</a>
            </div>
        </div>

        <hr />

        <div class="">
            <div class=" d-flex justify-content-between">
                <div class="more_info">
                    @Model.CountryName
                </div>
                <div class="more_info">
                    @Model.DateTime
                </div>
                <div class="more_info">
                    @Model.AddedByUserUserName
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


</body>
</html>
