@model BreakDanceBattles.Web.ViewModels.Competitions.CompetitionListViewModel
@{

    this.ViewData["Title"] = "All Competitions";
    var competitions = Model.Competitions.OrderBy(x => x.DateTime);

}      <h1> @this.ViewData["Title"]</h1>

<hr />


<div class="row">



    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Name</th>
                <th scope="col">Categories</th>
                <th scope="col">Country</th>
            </tr>
        </thead>

        @foreach (var competition in competitions)
        {
            var categories = "";
            foreach (var category in competition.Categories)
            {
                categories += category.CategoryName + " ";
            };

            <div class="hover-title">
                <tbody>
                    <tr class="table">
                        <td scope="row">@competition.DateTime.Day/@competition.DateTime.Month/@competition.DateTime.Year</td>
                        <th><a asp-action="ById" asp-route-id="@competition.Id" class="text-dark"><div class="hover-title">@competition.Name</div></a></th>
                        <td>@categories</td>
                        <td>@competition.CountryName</td>
                    </tr>
                </tbody>
            </div>

        }
    </table>
</div>

<hr />
